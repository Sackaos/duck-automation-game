<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBG"
    android:orientation="horizontal"
    android:weightSum="1"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:orientation="vertical"
        android:weightSum="1">

        <ListView
            android:id="@+id/lv_ResourceList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:divider="@color/material_blue_grey_800"
            android:dividerHeight="1.5dp"
            android:footerDividersEnabled="false" />

        <LinearLayout
            android:id="@+id/ly_MainMenu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:orientation="vertical"
            android:weightSum="1">

            <Button
                android:id="@+id/btn_Map"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="map" />

            <Button
                android:id="@+id/btn_Settings"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Settings" />

            <Button
                android:id="@+id/btn_Exit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Exit" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_Settings"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textColor="@color/teal_200"

                android:textSize="40sp" />

            <Switch
                android:id="@+id/switch_Settings_Power"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Power Saving Mode" />

            <Button
                android:id="@+id/btn_Settings_Back"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Back" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_weight="0.6"
        android:orientation="horizontal"
        android:weightSum="1">

        <ListView
            android:id="@+id/lv_Factories"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="0.1"
            android:divider="@color/material_blue_grey_800"
            android:dividerHeight="1dp"
            android:footerDividersEnabled="false" />

    </LinearLayout>


</LinearLayout>

